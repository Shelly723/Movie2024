@model Users
@{
    ViewData["Title"] = "Register";
}


@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="all">
    <div class="content">
        <h2 style="margin-bottom:0.7em">會員註冊</h2>
       
        <form asp-action="CreateUser" method="post">
            <div>
                <label asp-for="UserName">用戶名：</label>
                <input asp-for="UserName" autocomplete="off" required onclick="clearError('UserName', this)" /><br />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password">密碼 :</label>
                <input asp-for="Password" type="password" autocomplete="off" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email">電子郵件 :</label>
                <input asp-for="Email" type="Email" autocomplete="off" required onclick="clearError('Email', this)" /><br />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber">手機號碼 :</label>
                <input asp-for="PhoneNumber" autocomplete="off" required onclick="clearError('PhoneNumber', this)" /><br />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit">註冊</button>
        </form>

    </div>
    <img src="~/lib/img/joinus2.png" alt="Alternate Text" class="side-image" />
</div>
<script>
    function clearError(fieldName, inputElement) {
        // 清除對應的錯誤提示
        var errorElement = document.querySelector('[data-valmsg-for="' + fieldName + '"]');
        if (errorElement) {
            errorElement.innerText = ''; // 清除錯誤信息
        }
        // 清空輸入框的值
        if (inputElement) {
            inputElement.value = ''; // 清空輸入框
            inputElement.classList.remove('input-validation-error'); // 清除錯誤樣式
        }
    }
</script>
<style>
    .all {
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-wrap:wrap;
    }

    .content {
        border: #FF4E88 solid 1.5px;
        border-radius: 15%;
        text-align: center;
        padding: 20px;
        flex-basis: 50%;
        max-width: 380px;
        margin-top: 30px;
        font-size: 20px;
        
    }

        .content label {
            width: 100px;
            margin: 0.3em 0px;
        }

        .content input {
            font-size: 17px;
        }

    .side-image {
        width: 200px;
      
        border-radius: 10%;
        flex-basis: 40%;
        transform: rotate(-10deg);
    }

    .content button {
        background: linear-gradient(90deg, #ff5c97, #EB3678);
        color: white;
        width: 50%;
        margin: 1em 0px;
    }

        .content button:hover {
            background: linear-gradient(90deg, #EB3678, #ff5c97);
            color: white;
        }
</style>
